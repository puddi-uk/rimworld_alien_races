<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Added body parts -->
  <HediffDef ParentName="AddedBodyPartBase">
    <defName>WoodenBeak</defName>
    <label>wooden beak</label>
    <labelNoun>a wooden beak</labelNoun>
    <description>An installed wooden beak.</description>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>avianbeak</label>
            <capacities>
              <li>Bite</li>
            </capacities>
            <power>8.2</power>
            <!-- Same as natural fist -->
            <cooldownTime>2</cooldownTime>
          </li>
        </tools>
      </li>
    </comps>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>0.80</partEfficiency>
      <betterThanNatural>false</betterThanNatural>
    </addedPartProps>
  </HediffDef>
  <HediffDef ParentName="AddedBodyPartBase">
    <defName>BionicBeak</defName>
    <label>bionic beak</label>
    <labelNoun>a bionic beak</labelNoun>
    <description>An installed bionic beak.</description>
    <spawnThingOnRemoved>BionicBeak</spawnThingOnRemoved>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>avianbeak</label>
            <capacities>
              <li>Bite</li>
            </capacities>
            <power>12</power>
            <cooldownTime>2</cooldownTime>
          </li>
        </tools>
      </li>
    </comps>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1.20</partEfficiency>
      <betterThanNatural>false</betterThanNatural>
    </addedPartProps>
  </HediffDef>
</Defs>