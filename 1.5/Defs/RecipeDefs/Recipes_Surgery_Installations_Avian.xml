    <workAmount>1500</workAmount>
    <recipeUsers>
      <li>Alien_Cassowary</li>
      <li>Alien_Chicken</li>
      <li>Alien_Dodo</li>
      <li>Alien_Owl</li>
      <li>Alien_Parrot</li>
      <li>Alien_Penguin</li>
      <li>Alien_Vulture</li>
    </recipeUsers>
    <skillRequirements>
      <Medicine>7</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>BionicBeak</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
      <thingDefs>
        <li>BionicBeak</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>AvianBeak</li>
    </appliedOnFixedBodyParts>
    <addsHediff>BionicBeak</addsHediff>
  </RecipeDef>
</Defs>